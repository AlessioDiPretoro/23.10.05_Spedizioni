@model IEnumerable<Spedizioni.Models.Shipments>

@{
    ViewBag.Title = "AllShipments";
}

<h1>Gestione spedizioni</h1>

<div>
    <table class="table table-hover table-bordered container text-center">
        <tr>
            <th>Codice spedizione</th>
            <th>Mittente</th>
            <th>Indirizzo Destinazione</th>
            <th>Città Destinazione</th>
            <th>Data di Spedizione</th>
            <th>Gestione</th>
        </tr>
        @foreach (Spedizioni.Models.Shipments s in Model)
        {
            <tr>
                <td>@s.Code</td>
                <td>@s.sender.Surname @s.sender.Name</td>
                <td>@s.DestinationAddress</td>
                <td>@s.DestinationCity</td>
                <td>@s.ShippingDate.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("➕", "CreateDetails", "Admin", new { id = s.IdShipping }, new { @class = "btn btn-success" })
                    @Html.ActionLink("✒", "EditShipment", "Admin", new { id = s.IdShipping }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("🗑", "DeleteShipment", "Admin", new { id = s.IdShipping }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>